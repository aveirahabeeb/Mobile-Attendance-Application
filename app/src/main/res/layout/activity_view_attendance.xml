<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewAttendance">


    <SearchView
        android:id="@+id/SearchView_date"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:clickable="true"
        android:background="#F5DEB3"
        android:queryHint="Search (20/9/2019)"/>
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:paddingLeft="4dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtsearch_name"
            android:layout_width="140dp"
            android:layout_height="29dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/border"
            android:hint="Student Name"
            android:inputType="none"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_search_name"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Search Name"
            android:layout_marginLeft="4dp"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecylerViewAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        />


</LinearLayout>